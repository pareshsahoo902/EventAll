<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activities.ViewBusiness.BusinessList">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp">

    </androidx.recyclerview.widget.RecyclerView>


    <FrameLayout
        android:id="@+id/EmptyFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:background="#fff">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="empty_notification.json"
            app:lottie_loop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="90dp"
            android:text="No Business Added Yet\nFree list you business and grow with EventALl"
            android:layout_gravity="center"
            android:textColor="#B6B6B6"
            android:textSize="11dp"/>
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient"/>


        <ImageView
            android:id="@+id/BackChal"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back"
            android:tint="#fff"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Businesses"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="13dp"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/Card_AddABusiness"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardElevation="20dp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="#3F7AE1"
        app:cardCornerRadius="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a business"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="12dp"/>
    </androidx.cardview.widget.CardView>

</FrameLayout>