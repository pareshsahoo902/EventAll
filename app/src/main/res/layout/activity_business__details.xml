<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ViewBusiness.Business_Details">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:alpha="0.95"
            android:src="@drawable/gradient" />


        <ImageView
            android:id="@+id/BackImageSalSal"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back"
            android:tint="#fff"
            android:padding="3dp" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="17dp"
            android:src="@drawable/logo_only" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="18dp"
            android:text="Eventall Business"
            android:textColor="#fff"
            android:textSize="13dp" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="0dp"
                app:cardElevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="BUSINESS NAME"
                    android:textColor="#444444"
                    android:textSize="10dp" />


                <TextView
                    android:id="@+id/Text_BusinessName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="17dp"
                    android:text="Cha City and Cofee - Yummy Cold Cofee"
                    android:textColor="#5046E4"
                    android:textSize="13dp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="0dp"
                app:cardElevation="5dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#E2E2E2"
                            android:layout_gravity="bottom"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center|left"
                            android:text="SHOWCASE PHOTOS"
                            android:textColor="#C5C5C5"
                            android:textSize="10dp" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/No_Image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="20dp"
                        android:text="No Image Uploaded."
                        android:textColor="#C4C4C4"
                        android:textSize="10dp" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#E2E2E2"
                            android:layout_gravity="top"/>

                        <TextView
                            android:id="@+id/Text_ManagePhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Manage Photos"
                            android:textColor="#17AD8A"
                            android:textSize="10dp" />

                    </FrameLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="0dp"
                app:cardElevation="5dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#E2E2E2"
                            android:layout_gravity="bottom"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center|left"
                            android:text="BUSINESS CATEGORY"
                            android:textColor="#C5C5C5"
                            android:textSize="10dp" />

                    </FrameLayout>

                    <TextView

                        android:id="@+id/Text_Categories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Chuucy Moochy"
                        android:textColor="#585858"
                        android:textSize="12dp"
                        android:visibility="gone"/>


                    <TextView
                        android:id="@+id/No_Category_Selected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="20dp"
                        android:text="No Tag Line."
                        android:textColor="#C4C4C4"
                        android:textSize="10dp" />

                    <FrameLayout
                        android:id="@+id/Edit_ManageCategory"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#E2E2E2"
                            android:layout_gravity="top"/>

                        <TextView
                            android:id="@+id/Text_AddCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="MANAGE CATEGORY"
                            android:textColor="#17AD8A"
                            android:textSize="10dp" />

                    </FrameLayout>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="0dp"
                app:cardElevation="5dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#E2E2E2"
                            android:layout_gravity="bottom"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center|left"
                            android:text="BUSINESS TIMING"
                            android:textColor="#C5C5C5"
                            android:textSize="10dp" />

                    </FrameLayout>

                    <TextView

                        android:id="@+id/Text_TagLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Chuucy Moochy"
                        android:textColor="#585858"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/No_TagLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="20dp"
                        android:text="No Tag Line."
                        android:textColor="#C4C4C4"
                        android:textSize="10dp" />

                    <FrameLayout
                        android:id="@+id/Edit_TagLineFrame"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#E2E2E2"
                            android:layout_gravity="top"/>

                        <TextView
                            android:id="@+id/Text_EditTagLine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Edit Tag Line"
                            android:textColor="#17AD8A"
                            android:textSize="10dp" />

                    </FrameLayout>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="0dp"
                app:cardElevation="5dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#E2E2E2"
                            android:layout_gravity="bottom"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center|left"
                            android:text="DESCRIPTION"
                            android:textColor="#C5C5C5"
                            android:textSize="10dp" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/Text_Intro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Come here to enjoy your free time and get some tasty tea and cofee"
                        android:textColor="#585858"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/No_Desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="20dp"
                        android:text="No Description"
                        android:textColor="#C4C4C4"
                        android:textSize="10dp" />

                    <FrameLayout
                        android:id="@+id/Edit_Desc_Frame"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#E2E2E2"
                            android:layout_gravity="top"/>

                        <TextView
                            android:id="@+id/Text_EditDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Edit Description"
                            android:textColor="#17AD8A"
                            android:textSize="10dp" />

                    </FrameLayout>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="0dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#E2E2E2"
                            android:layout_gravity="bottom"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center|left"
                            android:text="LOCATION"
                            android:textColor="#C5C5C5"
                            android:textSize="10dp" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/Text_Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Plot No. 123 , Baramunda Square , Baramunda Bus Stand. Bhubaneswar,754100"
                        android:textColor="#585858"
                        android:textSize="12dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/MapContainer"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="15dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="#fff"
                        app:cardElevation="3dp">

                        <fragment
                            android:id="@+id/map"
                            class="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/No_Location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="20dp"
                        android:text="No Location Added"
                        android:textColor="#C4C4C4"
                        android:textSize="10dp" />

                    <FrameLayout
                        android:id="@+id/Update_Location_Frame"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#E2E2E2"
                            android:layout_gravity="top"/>

                        <TextView
                            android:id="@+id/Text_UpdateLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Update Location"
                            android:textColor="#17AD8A"
                            android:textSize="10dp" />

                    </FrameLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>




</FrameLayout>