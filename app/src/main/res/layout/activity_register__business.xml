<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddBusiness.Register_Business">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="0dp"
            app:cardElevation="10dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gradient" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:alpha=".1"
                android:background="@drawable/splash_onlylogo_transparent_withoutlogo" />


            <ImageView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logo_only" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="List your business for free"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />


            <ImageView
                android:id="@+id/BackImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:padding="4dp"
                android:src="@drawable/back"
                android:tint="#FFFFFF" />


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="20dp"
                    android:padding="1dp"
                    android:src="@drawable/user"
                    android:tint="#6A5AF7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="3dp"
                    android:text="Contact Person"
                    android:textColor="#5E5E5E"
                    android:textSize="11dp" />

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/rounded_box"
                    android:backgroundTint="#F0F0F0"
                    android:hint="Full Name"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#3C3C3C"
                    android:textColorHint="#D3D3D3"
                    android:textSize="12dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="18dp"
                    android:padding="1dp"
                    android:src="@drawable/business"
                    android:tint="#6A5AF7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="3dp"
                    android:text="Your Business Title"
                    android:textColor="#5E5E5E"
                    android:textSize="11dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Alert - You can not change your Business Title Later"
                    android:textColor="#B8B8B8"
                    android:textSize="10dp" />

                <EditText
                    android:id="@+id/BusinessTitle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/rounded_box"
                    android:backgroundTint="#F0F0F0"
                    android:hint="Business Title"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#3C3C3C"
                    android:textColorHint="#D3D3D3"
                    android:textSize="12dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="20dp"
                    android:padding="1dp"
                    android:src="@drawable/phone"
                    android:tint="#6A5AF7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="3dp"
                    android:text="Business Contact Number"
                    android:textColor="#5E5E5E"
                    android:textSize="11dp" />

                <EditText
                    android:id="@+id/Number"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/rounded_box"
                    android:backgroundTint="#F0F0F0"
                    android:hint="Business Mobile Number"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:maxLength="10"
                    android:paddingRight="20dp"
                    android:textColor="#3C3C3C"
                    android:textColorHint="#D3D3D3"
                    android:textSize="12dp" />

            </FrameLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/SaveButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:cardBackgroundColor="#298DDD"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:alpha="0.7"
                    android:background="@drawable/gradient" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Save"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />

            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>


    </FrameLayout>


</FrameLayout>