<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    tools:context=".Activities.Login.Login">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center|top"
            android:layout_marginTop="-110dp"
            android:alpha=".07"
            android:background="@drawable/splash_onlylogo_transparent_withoutlogo"/>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="-160dp"
            android:alpha=".05"
            android:background="@drawable/splash_onlylogo_transparent_withoutlogo"/>



        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:src="@drawable/logo_only"
            android:layout_marginTop="40dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to EventAll"
            android:layout_gravity="center|top"
            android:layout_marginTop="160dp"
            android:textSize="20dp"
            android:textColor="#FFFFFF"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_editbox">


                <EditText
                    android:id="@+id/Edit_Email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:hint="Email Address"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="12dp"
                    android:textColor="#fff"
                    android:layout_marginLeft="40dp"

                    android:textColorHint="#57FFFFFF"/>


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/email"
                    android:tint="#fff"/>

            </FrameLayout>


            <FrameLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_editbox">


                <EditText
                    android:id="@+id/Edit_Password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:hint="Password"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:textSize="12dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:textColor="#fff"
                    android:textColorHint="#5CFFFFFF"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/password_two"
                    android:tint="#fff"/>

                <ImageView
                    android:id="@+id/seepassword"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="15dp"
                    android:padding="2dp"
                    android:src="@drawable/view"
                    android:tint="#fff"/>

            </FrameLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/Card_Login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="125dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#F0FFFFFF"
            app:cardCornerRadius="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:textColor="#3D3D3D"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Card_SKIP"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="65dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#F0FFFFFF"
            app:cardCornerRadius="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:textColor="#606060"/>

        </androidx.cardview.widget.CardView>



        <FrameLayout
            android:id="@+id/Frame_CreateNewAccount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an Account"
                android:layout_gravity="center"
                android:textSize="11dp"
                android:textColor="#BFFFFFFF"/>

        </FrameLayout>



        <TextView
            android:visibility="gone"
            android:id="@+id/SkipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKIP"
            android:layout_gravity="top|left"
            android:textSize="12dp"
            android:padding="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#FFFFFF"/>




    </FrameLayout>




</FrameLayout>