<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activities.ViewBusiness.EditPages.Edit_Location">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/locationn"
            android:tint="#fff"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:id="@+id/backAss"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back"
            android:tint="#fff"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="13dp"/>
    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="0dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Give a proper and well described location that will help your customers reach you without any inconvenience"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="18dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="18dp"
                    android:textSize="11dp"
                    android:textColor="#B3B3B3"/>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provide Location Details"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:textSize="11dp"
                android:textColor="#494949"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/Edit_BuildingName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:hint="Building Name"
                            android:textSize="12dp"
                            android:maxLines="1"
                            android:textColor="#575757"
                            android:textColorHint="#DDDDDD"
                            android:backgroundTint="#D8D8D8"/>

                </FrameLayout>

                <FrameLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/Edit_StreetName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:hint="Street Name"
                            android:textSize="12dp"
                            android:maxLines="1"
                            android:textColor="#575757"
                            android:textColorHint="#DDDDDD"
                            android:backgroundTint="#D8D8D8"/>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp">


                        <EditText
                            android:id="@+id/Edit_Area"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:hint="Area or Locality"
                            android:textSize="12dp"
                            android:maxLines="1"
                            android:textColor="#575757"
                            android:textColorHint="#DDDDDD"
                            android:backgroundTint="#D8D8D8"/>


                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp">




                        <EditText
                            android:id="@+id/Edit_City"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:hint="City"
                            android:textSize="12dp"
                            android:maxLines="1"
                            android:textColor="#575757"
                            android:textColorHint="#DDDDDD"
                            android:backgroundTint="#D8D8D8"/>


                </FrameLayout>
                <FrameLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp">




                        <EditText
                            android:id="@+id/Edit_District"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:hint="District"
                            android:textSize="12dp"
                            android:maxLines="1"
                            android:textColor="#575757"
                            android:textColorHint="#DDDDDD"
                            android:backgroundTint="#D8D8D8"/>


                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">


                            <EditText
                                android:layout_weight="1"
                                android:id="@+id/Edit_State"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:hint="State Name"
                                android:textSize="12dp"
                                android:maxLines="1"
                                android:textColor="#575757"
                                android:textColorHint="#DDDDDD"
                                android:backgroundTint="#D8D8D8"/>


                            <EditText
                                android:layout_weight="1"
                                android:id="@+id/Edit_PinCode"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:layout_marginRight="20dp"
                                android:hint="Pin Code"
                                android:inputType="number"
                                android:textSize="12dp"
                                android:maxLines="1"
                                android:textColor="#575757"
                                android:textColorHint="#DDDDDD"
                                android:backgroundTint="#D8D8D8"/>

                    </LinearLayout>


                </FrameLayout>


                <FrameLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp">


                        <EditText
                            android:id="@+id/Edit_landmark"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:hint="Landmark"
                            android:textSize="12dp"
                            android:maxLines="1"
                            android:textColor="#575757"
                            android:textColorHint="#DDDDDD"
                            android:backgroundTint="#D8D8D8"/>

                </FrameLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point the exact location on Map"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:textSize="11dp"
                android:textColor="#494949"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/MapCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp">



                <fragment
                    android:id="@+id/map"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/MapClickPanel"
                    android:background="#3E050505"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/marker_pin"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Click to pick location)"
                android:textAlignment="center"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="18dp"
                android:textSize="10dp"
                android:textColor="#B9B9B9"/>


        </LinearLayout>


    </ScrollView>





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#fff">

        <androidx.cardview.widget.CardView
            android:id="@+id/SaveButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="bottom|center"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradient"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="13dp"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>



</FrameLayout>