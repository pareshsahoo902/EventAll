<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/Frame_LeftMargin"
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>



        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/Image_SubCatImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/image_placeholder_withoutlogo_small" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/shade"
                        android:backgroundTint="#000"/>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/shade"
                        android:backgroundTint="#000"/>

                    <TextView
                        android:id="@+id/Text_SubCatName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="10dp"
                        android:ellipsize="end"
                        android:text="Jwelari"
                        android:textColor="#FFFFFF"
                        android:textSize="11dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/Frame_RightMargin"
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</FrameLayout>