<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/MargingFrame"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#BABABA"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/TopLine"
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:background="#E8E8E8"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="27dp"/>

        <ImageView
            android:id="@+id/BottomLine"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#E8E8E8"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="27dp"/>

        <TextView
            android:id="@+id/Text_IndexCount"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="01"
            android:textAlignment="center"
            android:layout_gravity="left|top"
            android:textColor="#FFFFFF"
            android:layout_marginTop="11dp"
            android:textSize="10dp"
            android:background="@drawable/circle"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:backgroundTint="#2FC19E"/>
        <TextView
            android:id="@+id/Text_BN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cofee Shop and show all everything and apple and bannadna"
            android:textColor="#3E3E3E"
            android:textSize="11dp"
            android:layout_marginRight="100dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_gravity="left"
            android:layout_marginBottom= "10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="55dp"/>
        <TextView
            android:id="@+id/Text_ListedIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listed in Wedding, Party , Florist"
            android:textSize="10dp"
            android:layout_gravity="left"
            android:maxLines="1"
            android:textColor="#B5B5B5"
            android:layout_marginRight="100dp"
            android:ellipsize="end"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="55dp"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/map"
            android:tint="#B5B5B5"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="55dp"/>
        <TextView
            android:id="@+id/Text_LocationShort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kandarpur , Cuttack"
            android:textSize="10dp"
            android:layout_gravity="left"
            android:textColor="#B5B5B5"
            android:maxLines="1"
            android:layout_marginRight="100dp"
            android:ellipsize="end"
            android:layout_marginTop="53dp"
            android:layout_marginLeft="67dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/Body"
            android:layout_width="45dp"
            android:layout_height="25dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#2FC19E">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Edit"
                android:textSize="10dp"
                android:textColor="#fff"/>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/MargingFrameBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>