<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUp.User_Details">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="0dp"
            app:cardElevation="10dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gradient" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:alpha=".1"
                android:background="@drawable/splash_onlylogo_transparent_withoutlogo" />


            <ImageView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logo_only" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="Complete your Profile"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="20dp"
                    android:padding="1dp"
                    android:src="@drawable/user"
                    android:tint="#5081E2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="3dp"
                    android:text="Your Full Name"
                    android:textColor="#919191"
                    android:textSize="10dp" />

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/rounded_box"
                    android:backgroundTint="#F0F0F0"
                    android:hint="Full name"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#3C3C3C"
                    android:textColorHint="#D3D3D3"
                    android:textSize="12dp" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="20dp"
                    android:padding="2dp"
                    android:src="@drawable/phone"
                    android:tint="#5081E2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="3dp"
                    android:text="Mobile Number"
                    android:textColor="#919191"
                    android:textSize="10dp" />

                <EditText
                    android:id="@+id/Number"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/rounded_box"
                    android:backgroundTint="#F0F0F0"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#3C3C3C"
                    android:textColorHint="#D3D3D3"
                    android:textSize="12dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_editbox">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="3dp"
                    android:text="Your Gender"
                    android:textColor="#A8A8A8"
                    android:textSize="10dp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#F3F3F3"
                        android:orientation="horizontal"
                        android:weightSum="3">


                        <FrameLayout
                            android:id="@+id/maleframe"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="#D5D5D5" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/male"
                                android:tint="#1F1F1F" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Male"
                                android:textColor="#949494"
                                android:textSize="9dp" />

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/femaleframe"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="#D5D5D5" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/female"
                                android:tint="#1F1F1F" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Female"
                                android:textColor="#949494"
                                android:textSize="9dp" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/otherframe"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/other"
                                android:tint="#1F1F1F" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="Other"
                                android:textColor="#949494"
                                android:textSize="9dp" />
                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </FrameLayout>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="0dp"
            app:cardElevation="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/SaveButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:cardBackgroundColor="#298DDD"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:alpha="0.7"
                    android:background="@drawable/gradient" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Next"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />

            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>


    </FrameLayout>


</FrameLayout>